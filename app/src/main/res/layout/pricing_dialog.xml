<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

    android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="payment"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_gravity="top"
                android:textSize="20sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/whiteColor"
                android:textAlignment="center"
                />
            <!--PRICING-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Payment Method"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="17sp"

                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/radioItems">
                <RadioButton
                    android:id="@+id/radioButtonCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:layout_marginStart="20dp"
                    />
                <RadioButton
                    android:id="@+id/radioButtonMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Money"
                    android:layout_marginStart="20dp"
                    />
            </RadioGroup>


            <TextView
                android:id="@+id/comingSoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only cash payment is allowed currently"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:textSize="12sp"
                android:textColor="#f00"
                android:visibility="invisible"

                />
            <!--buttons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/confirmOrderBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Transaction"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@color/colorAccent"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Cancel"
                    android:background="#0000"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>