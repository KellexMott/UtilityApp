<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    tools:context="com.musanga.hackersguild.musanga.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="1dp"
                android:background="@drawable/card"
                android:weightSum="1">

                <TextView
                    android:id="@+id/titleNameId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.36"
                    android:paddingTop="20dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#f1592a"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/titleEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:paddingBottom="23dp"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:elevation="1dp"
                android:background="@drawable/card">

                <TextView
                    style="@style/textViewProfile"
                    android:text="Name"/>

                <EditText
                    android:id="@+id/profNameId"
                    style="@style/editTextProfile" />

                <TextView
                    style="@style/textViewProfile"
                    android:layout_marginTop="20dp"
                    android:text="Email"/>

                <EditText
                    android:id="@+id/profEmailId"
                    style="@style/editTextProfile" />

                <TextView
                    style="@style/textViewProfile"
                    android:text="@string/phone"/>

                <EditText
                    android:id="@+id/profPhoneId"
                    style="@style/editTextProfile" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/updateBtn"
                    style="@style/buttonProfile"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="11dp"
                    android:text="@string/edit_profile"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/Done"
                    style="@style/buttonProfile"
                    android:text="@string/update_profile"
                    />

            </FrameLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
